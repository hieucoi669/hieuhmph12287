<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_screen2"
    tools:context="com.edu.fpoly.bookmanager.SplashScreenActivity"
    android:orientation="vertical"
    android:gravity="center|top">

    <TextView
        android:layout_marginTop="250dp"
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quản lý sách"
        android:textColor="#8E0101"
        android:textSize="30sp"
        android:textStyle="italic"
        app:fontFamily="@font/baloo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phương Nam"
        android:textColor="#8E0101"
        android:textSize="36sp"
        app:fontFamily="@font/pacifico" />

</LinearLayout>
